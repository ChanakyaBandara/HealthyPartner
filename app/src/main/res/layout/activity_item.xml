<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@null">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="goToCam"
            android:background="@color/transparent"
            android:fontFamily="@font/regular"
            android:src="@drawable/ic_back"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:onClick="gotoLogout"
            android:background="@color/transparent"
            android:src="@drawable/ic_power"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coca Cola"
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:fontFamily="@font/medium"
                        android:layout_marginTop="15dp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/coke"/>

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rs.260"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:fontFamily="@font/regular"
                        android:layout_marginTop="15dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Net Weight/Volume"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="start"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/txtWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" 80g "
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="end"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Sugar"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="start"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/txtSugar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" 5g "
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="end"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Fat"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="start"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/txtFat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" 2g "
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="end"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Salt"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="start"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/txtSalt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" 0.5g "
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="end"
                            android:layout_weight="1"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="15dp"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Veg / Non-Veg"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="start"
                            android:layout_weight="2"/>

                        <TextView
                            android:id="@+id/txtVeg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=" Veg "
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:fontFamily="@font/regular"
                            android:layout_marginTop="15dp"
                            android:gravity="end"
                            android:layout_weight="1"/>


                    </LinearLayout>


                </LinearLayout></androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/card1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtbadge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#E74C3C"
                        android:textSize="30dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold" />

<!--                    <com.google.android.material.slider.Slider-->
<!--                        style="@style/SliderTheme"-->
<!--                        android:id="@+id/slider"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:contentDescription="Portion"-->
<!--                        app:trackColor="@color/black"-->
<!--                        app:tickColor="@color/yellow"-->
<!--                        app:thumbColor="@color/yellow"-->
<!--                        android:valueFrom="0.0"-->
<!--                        android:valueTo="100.0"-->
<!--                        android:stepSize="10.0"-->
<!--                        android:layout_margin="10dp"/>-->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consume Amount"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/regular"
                        android:gravity="start"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="82"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:id="@+id/txtPercentage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:layout_weight="18"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnAcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Consume"
                            android:onClick="Consume"
                            android:layout_margin="5dp"
                            android:background="@drawable/button_border"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/Black"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </LinearLayout>




            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

